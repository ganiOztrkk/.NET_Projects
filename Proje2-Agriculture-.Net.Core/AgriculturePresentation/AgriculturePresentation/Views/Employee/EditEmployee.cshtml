@model EntityLayer.Concrete.Employee
@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Bilgi Güncelleme</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.EmployeeID)
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="" asp-for="EmployeeName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Facebook linkini giriniz" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Instagram linkini giriniz" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Twitter linkini giriniz" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Web Sitesi</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Web sitesi linkini giriniz" asp-for="WebsiteUrl">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>