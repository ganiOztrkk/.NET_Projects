@using EntityLayer.Concrete
@model List<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Listesi</h4>
            <div class="table-responsive">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Görev</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td>@item.EmployeeID</td>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.Title</td>
                                    <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Employee/EditEmployee/@item.EmployeeID" class="btn btn-outline-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>UYARI!</strong> Veri Tabanınızda Personel Bulunamamıştır. Lütfen Personel Girişi Yapınız.
                    </div>
                }
                
            </div>
            <br />
            <a href="/Employee/AddEmployee" class="btn btn-outline-success">Yeni Personel Girişi</a>
        </div>
    </div>
</div>

